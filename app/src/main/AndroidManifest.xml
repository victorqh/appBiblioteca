<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vquispeh.appBiblioteca">

    <application
        android:allowBackup="true"
        android:label="Biblioteca"
        android:theme="@style/Theme.AppBiblioteca">

        <!-- LoginActivity: launcher, necesita exported -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Registro: sin intent-filter, explicit exported opcional -->
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"/>

        <!-- CatÃ¡logo: sin intent-filter -->
        <activity
            android:name=".ui.books.MainActivity"
            android:exported="false"/>

    </application>
</manifest>



